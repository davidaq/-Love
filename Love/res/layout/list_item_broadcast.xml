<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/BackBaseColor"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/item_relative_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/item_padding">
        <ImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/avatar_size_broadcast"
            android:layout_height="@dimen/avatar_size_broadcast"
            android:background="@drawable/avatar_default"
            android:contentDescription="@string/app_name"/>
        
        <TextView
            android:id="@+id/timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/avatar"
            android:text="@string/testdate"
            style="@style/ItemTextDate"/>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/avatar"
            android:layout_toRightOf="@id/avatar"
            android:layout_toLeftOf="@id/timestamp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
            android:id="@+id/video_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/testvideo"
            style="@style/ItemTextSoundName"/>
            <TextView
            android:id="@+id/sound_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/ic_music"
            android:drawablePadding="10dp"
            android:text="@string/testsound"
            style="@style/ItemTextSoundName"/>
        </LinearLayout>
        
    </RelativeLayout>
    
    <cc.ccme.love.widget.Player
        android:id="@+id/player"
        android:layout_width="match_parent"
        android:layout_height="@dimen/video_height"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/item_linear_padding"
        android:layout_marginLeft="10dp">
        <ImageButton
            android:id="@+id/btn_comment"
            android:layout_width="@dimen/item_btn_size"
            android:layout_height="@dimen/item_btn_size"
            android:background="@drawable/btn_comment_selector"
            android:contentDescription="@string/app_name"/>
        <TextView
            android:id="@+id/text_comment_count"
            android:layout_width="@dimen/item_text_width"
            android:layout_height="@dimen/item_btn_size"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/testcount"
            style="@style/ItemTextCount"/>
        
        <ImageButton
            android:id="@+id/btn_share"
            android:layout_width="@dimen/item_btn_size"
            android:layout_height="@dimen/item_btn_size"
            android:background="@drawable/btn_share_selector"
            android:contentDescription="@string/app_name"/>
        <TextView
            android:id="@+id/text_share_count"
            android:layout_width="@dimen/item_text_width"
            android:layout_height="@dimen/item_btn_size"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            style="@style/ItemTextCount"/>
        
        <ImageButton
            android:id="@+id/btn_favor"
            android:layout_width="@dimen/item_btn_size"
            android:layout_height="@dimen/item_btn_size"
            android:background="@drawable/btn_favor_selector"
            android:contentDescription="@string/app_name"/>
        <TextView
            android:id="@+id/text_favor_count"
            android:layout_width="@dimen/item_text_width"
            android:layout_height="@dimen/item_btn_size"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/testcount"
            style="@style/ItemTextCount"/>
        
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text=""
        android:background="@color/BroadcastBg"/>
</LinearLayout>
