<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
    </style>
    
    <!-- Common values -->
    
    <style name="TitleText">
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
    </style>
    
    <!-- Values for left menu -->

    <style name="UserName">
        <item name="android:textColor">@color/TextBaseColor</item>
        <item name="android:textSize">25sp</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="Signature">
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">15sp</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="Age">
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">10dp</item>
    </style>
    
    <style name="AttentionCount">
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="AttentionTitle">
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="MenuText">
        <item name="android:textColor">@color/TextBaseColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:drawableBottom">@drawable/list_divider</item>
    </style>
    
    <!-- Values for broadcast -->
    <style name="ItemTextDate">
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="ItemTextSoundName">
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">bottom</item>
    </style>
    <style name="ItemTextCount">
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">left</item>
    </style>
    
    
</resources>
