<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
    </style>
    
    <!-- 联系分组样式 -->
    <style name="MMListItem">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">4.0dip</item>
        <item name="android:paddingTop">4.0dip</item>
        <item name="android:paddingRight">4.0dip</item>
        <item name="android:paddingBottom">4.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MMFriendListItem">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">16.0dip</item>
        <item name="android:paddingTop">6.0dip</item>
        <item name="android:paddingRight">6.0dip</item>
        <item name="android:paddingBottom">6.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MMListCatalog">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff595c61</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">#ffced2d7</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingTop">2.0dip</item>
        <item name="android:paddingBottom">2.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="MMFontTitleInList">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">#ff595c61</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MMFontTipInList">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <!-- Common values -->
    
    <style name="TitleText">
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
    </style>
    
    <!-- Values for left menu -->

    <style name="UserName">
        <item name="android:textColor">@color/TextBaseColor</item>
        <item name="android:textSize">25sp</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="Signature">
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">15sp</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="Age">
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">10dp</item>
    </style>
    
    <style name="AttentionCount">
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="AttentionTitle">
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="MenuText">
        <item name="android:textColor">@color/TextBaseColor</item>
        <item name="android:background">@drawable/bg_left_menu_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">15dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>
    
    <style name="SplitLine">
        <item name="android:src">@drawable/list_divider</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    
    <!-- Values for broadcast -->
    <style name="ItemTextDate">
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="ItemTextSoundName">
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">bottom</item>
    </style>
    <style name="ItemTextCount">
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">left</item>
    </style>
    
    <!-- Values for person -->
    <style name="AttentionTitlePerson">
        <item name="android:textColor">@color/TextBaseColor</item>
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="PersonButton">
        <item name="android:background">@drawable/btn_common_selector</item>
        <item name="android:textColor">@drawable/color_button_selector</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <!-- Values for person edit -->
    <style name="PersonEditText">
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/White</item>
        </style>
        
    <!-- Values for the event -->
    
    <style name="EventTabText">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/color_tab_event_selector</item>
    </style>
    
    <style name="EventListItemTitleText">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/Gray</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="EventListItemPrivacyText">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/Gray</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="EventListItemNameText">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/Gray</item>
        <item name="android:drawableTop">@drawable/avatar_list_item</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="EventListItemDateText">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/Gray</item>
        <item name="android:drawableLeft">@drawable/ic_event_date</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="EventListItemLocationText">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/Gray</item>
        <item name="android:drawableLeft">@drawable/ic_event_location</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>
